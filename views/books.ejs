<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Book Store</title>
  </head>
  <body>
    <% include partials/nav %>

    <section class="container book">
      <div class="book__content">
        <h2 class="shelf-heading">Browse the virtual Shelf</h2>
        <hr />
        <%if(books.length > 0){ books.forEach(book => { %>
        <div class="book-details">
          <div class="book-details__main">
            <h4 class="book-heading"><%= book.title %> - <%= book.author %></h4>
          </div>
          <p><%= book.description.substr(0,200) + "..." %></p>
          <!-- <button>Buy Now for â‚¹<%= book.price %></button> -->
          <a class="g-a b-a" href="/books/<%= book._id %>"
            ><button class="btn-go">
              Show More <i class="bi bi-arrow-right-short"></i></button
          ></a>
          <!-- <hr /> -->

          <% }); } else{ %>
          <div
            style="
              height: 50vh;
              display: flex;
              align-items: center;
              justify-content: center;
              text-align: center;
            "
          >
            <p><%= "No Books Available, Try to Add New Books"%></p>
          </div>
          <%}%>
        </div>
      </div>
    </section>
  </body>
</html>
